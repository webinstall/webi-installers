// ~/.jshintrc.webi.json5
// Recommended config from https://webinstall.dev/jshint
//
// To copy this file into your project without comments, run this:
//     sed -e 's://.*::g' ~/.jshintrc.webi.json5 > .jshintrc

{
  "browser": true,
  "node": true,
  "esversion": 11,
  "curly": true,
  "sub": true,

  // More strict
  "bitwise": true,
  "eqeqeq": true,
  "forin": true,
  "freeze": true,
  "immed": true,
  "latedef": "nofunc",
  "nonbsp": true,
  "nonew": true,
  "plusplus": true,
  "undef": true,
  "unused": "vars",
  "strict": true,
  "maxdepth": 4,
  "maxstatements": 100,
  "maxcomplexity": 20
}
